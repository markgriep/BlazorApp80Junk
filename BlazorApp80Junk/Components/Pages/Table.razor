@page "/table"

@* This is for per page mode *@
@rendermode InteractiveServer


<MudTable Items="@Elements" class="mt-12">

    <RowTemplate>
        <MudTd DataLabel="Sign">@context.Sign</MudTd>
        <MudTd DataLabel="Name">@context.Name</MudTd>
    </RowTemplate>


    <PagerContent>
        <MudTablePager PageSizeOptions="new int[] {3, 5, 10 }" />
    </PagerContent>



</MudTable>



@code {






    private IEnumerable<Element> Elements = new List<Element>();

    protected override async Task OnInitializedAsync()
    {
        Elements = Element.GetElements().OrderBy(a => a.Sign);
    }



 }
